[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8

trim_trailing_whitespace = true
insert_final_newline = true

# salt state files
[*.yml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{Make,make,Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4
